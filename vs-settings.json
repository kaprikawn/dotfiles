
// WORK
{
      "git.ignoreMissingGitWarning": true
    , "extensions.ignoreRecommendations": true
    , "editor.tabSize": 2
    , "editor.wordWrap": "on"
    , "editor.links": false
    , "files.eol": "\n"
    , "files.associations": {
        "*.cgi" : "perl"
      , "*.ksh" : "shellscript"
    }
  }

// HOME
{
      "editor.tabSize": 2
    , "editor.wordWrap": "on"
    , "workbench.activityBar.visible": false
    , "editor.trimAutoWhitespace": false
    , "files.exclude": {
          "exe"                 : true
        , "CMakeCache.txt"      : true
        , "cmake_install.cmake" : true
        , "clean"               : true
        , "Makefile"            : true
        , "run"                 : true
        , "**/CMakeFiles"       : true
        , "**/cmake"            : true
        
    }
    , "editor.fontFamily": "'Ubuntu Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'"
    , "editor.fontSize": 16
  }

// Place your key bindings in this file to overwrite the defaults -- WORK
[
    {
        "key": "ctrl+d",
        "command": "-editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+d",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "shift+alt+down",
        "command": "-editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+delete",
        "command": "-workbench.action.terminal.deleteWordRight",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+delete",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+k",
        "command": "-editor.action.deleteLines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+l",
        "command": "editor.action.transformToLowercase"
    },
    {
        "key": "ctrl+shift+u",
        "command": "editor.action.transformToUppercase"
    }
]
